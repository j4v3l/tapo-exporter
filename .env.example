# Number of devices to monitor
TAPO_DEVICE_COUNT=1

# Device 1 Configuration
TAPO_DEVICE_1_NAME="Living Room"
TAPO_DEVICE_1_TYPE="p115"
TAPO_DEVICE_1_IP="192.168.1.100"
TAPO_DEVICE_1_EMAIL="your.email@example.com"
TAPO_DEVICE_1_PASSWORD="your_secure_password"

# Device 2 Configuration (Optional)
# TAPO_DEVICE_2_NAME="Kitchen"
# TAPO_DEVICE_2_TYPE="p115"
# TAPO_DEVICE_2_IP="192.168.1.101"
# TAPO_DEVICE_2_EMAIL="your.email@example.com"
# TAPO_DEVICE_2_PASSWORD="your_secure_password"

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_DIR=/var/log/tapo

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=tapo
INFLUXDB_BUCKET=tapo

# Grafana Configuration (Optional)
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false